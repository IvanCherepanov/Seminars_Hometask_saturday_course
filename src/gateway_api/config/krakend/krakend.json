{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "KrakenD_api",
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "port": 8070,
  "endpoints": [
    {
      "endpoint": "/client",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/documents",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "disable_host_sanitize": false,
          "host": [
            "doc_cont:8010"
          ],
          "is_collection": true,
          "target": "",
          "mapping": {
            "collection": "documents"
          }
        },
        {
          "url_pattern": "/printers",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "disable_host_sanitize": false,
          "host": [
            "print_cont:8011"
          ],
          "is_collection": true,
          "target": "",
          "mapping": {
            "collection": "printers"
          }
        }
      ],
      "input_query_strings": []
    },
    {
      "endpoint": "/health",
      "extra_config": {
        "proxy": {
          "static": {
            "data": {
              "custom": "response",
              "foo": "bar"
            },
            "strategy": "always"
          }
        }
      },
      "backend": [
        {
          "url_pattern": "/__health",
          "host": [
            "http://localhost:8070"
          ]
        }
      ]
    },
    {
      "endpoint": "/main",
      "method": "GET",
      "output_encoding": "json",
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "https://keyclock_cont:8080/realms/easyapi/protocol/openid-connect/certs",
          "roles_key": "groups",
          "roles": [
            "admin"
          ]
        }
      },
      "backend": [
        {
          "url_pattern": "/main",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "micro_1_cont:8012"
          ],
          "disable_host_sanitize": false,
          "deny": [],
          "allow": [
            "foo"
          ]
        },
        {
          "url_pattern": "/main",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "micro_2_cont:8013"
          ],
          "disable_host_sanitize": false,
          "allow": [
            "second"
          ]
        }
      ]
    },
    {
      "endpoint": "/person",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/person",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "micro_1_cont:8012"
          ],
          "disable_host_sanitize": false
        },
        {
          "url_pattern": "/person",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "micro_2_cont:8013"
          ],
          "disable_host_sanitize": false,
          "allow": [
            "profession"
          ]
        }
      ]
    }
  ],
  "extra_config": {
    "telemetry/opencensus": {
      "sample_rate": 100,
      "reporting_period": 1,
      "enabled_layers": {
        "backend": true,
        "router": true
      },
      "exporters": {
        "jaeger": {
          "endpoint": "http://jaeger:14268/api/traces",
          "service_name": "krakend"
        }
      }
    }
  }
}